<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <error-page>
        <exception-type>com.disuraaberathna.core.exception.CommonException</exception-type>
        <location>/error/common.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.disuraaberathna.core.exception.LoginFailedException</exception-type>
        <location>/error/login-failed.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.disuraaberathna.core.exception.UnauthorizedAccessException</exception-type>
        <location>/error/unauthorized.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.disuraaberathna.core.exception.InvalidParameterException</exception-type>
        <location>/error/invalid-parameter.jsp</location>
    </error-page>

    <error-page>
        <exception-type>com.disuraaberathna.core.exception.InsufficientFundsException</exception-type>
        <location>/error/insufficient-fund.jsp</location>
    </error-page>
</web-app>